<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/daily_widget_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:padding="@dimen/default_content_padding"
		android:src="@mipmap/ic_launcher"/>

	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_toRightOf="@id/daily_widget_image"
		android:layout_weight="1"
		android:background="@color/white"
		android:orientation="vertical">

		<TextView
			style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="top"
			android:background="@color/pariyatti"
			android:gravity="center"
			android:padding="@dimen/widget_padding"
			android:text="@string/widget_title"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/daily_widget_term"
			style="@style/Base.TextAppearance.AppCompat.Medium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top"
			android:padding="@dimen/widget_padding"
			android:textColor="@color/dark"
			android:textStyle="bold|italic"/>

		<TextView
			android:id="@+id/daily_widget_definition"
			style="@style/Base.TextAppearance.AppCompat.Small"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top"
			android:padding="@dimen/widget_padding"
			android:textColor="@color/dark"/>

	</LinearLayout>
</RelativeLayout>