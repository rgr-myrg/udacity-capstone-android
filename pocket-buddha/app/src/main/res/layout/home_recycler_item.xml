<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/home_recycler_item_card_view"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	card_view:cardUseCompatPadding="true"
	card_view:cardElevation="@dimen/cardview_elevation"
	android:elevation="@dimen/cardview_elevation"
	android:layout_marginBottom="@dimen/minimal_layout_size">

	<LinearLayout
		android:id="@+id/home_recycler_item_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/white"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/item_image"
			android:layout_width="match_parent"
			android:layout_height="@dimen/home_item_image_height"
			android:contentDescription="@string/content_image_description"
			android:scaleType="centerCrop" />

		<TextView
			android:id="@+id/item_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/item_image"
			android:layout_alignParentBottom="true"
			android:paddingBottom="@dimen/item_title_padding"
			android:paddingTop="@dimen/item_title_padding"
			android:gravity="center_horizontal"
			android:background="@color/colorPrimaryDark"
			android:textStyle="bold"
			style="@style/Base.TextAppearance.AppCompat.Large.Inverse"/>

	</LinearLayout>
</android.support.v7.widget.CardView>