<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	android:id="@+id/search_results_item_card_view"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/default_margin"
	android:elevation="@dimen/cardview_elevation"
	app:layout_anchorGravity="bottom"
	card_view:contentPadding="@dimen/default_content_padding">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:gravity="top"
		android:orientation="horizontal">

		<LinearLayout
			android:id="@+id/search_results_item_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="top"
			android:gravity="center"
			android:paddingEnd="@dimen/default_content_padding"
			android:paddingRight="@dimen/default_content_padding">

			<TextView
				android:id="@+id/search_results_item_circle"
				style="@style/TextAppearance.AppCompat.Small.Inverse"
				android:layout_width="@dimen/drawable_circle_size"
				android:layout_height="@dimen/drawable_circle_size"
				android:layout_centerInParent="true"
				android:layout_gravity="top"
				android:background="@drawable/circle"
				android:gravity="center"
				android:textColor="@android:color/white"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/search_results_item_title"
				style="@style/TextAppearance.AppCompat.Medium"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_weight="1"
				android:textStyle="bold"
				android:theme="@style/CardviewTextStyle"/>

			<TextView
				android:id="@+id/search_results_item_description"
				style="@style/TextAppearance.AppCompat.Medium"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_weight="1"
				android:theme="@style/CardviewTextStyle"/>
		</LinearLayout>
	</LinearLayout>
</android.support.v7.widget.CardView>