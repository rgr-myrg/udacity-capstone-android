<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/daily_widget_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:layout_gravity="top"
		android:src="@mipmap/ic_launcher"/>

	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
        android:layout_toRightOf="@id/daily_widget_image"
		android:layout_weight="1"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<TextView
			android:id="@+id/daily_widget_term"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="top"
			android:gravity="center"
			android:padding="3dp"
			android:text="word"
			android:textStyle="bold"
			android:background="@color/pariyatti"
			style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"/>
		<TextView
			android:id="@+id/daily_widget_definition"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="top"
			android:gravity="start"
			android:padding="3dp"
			android:text="description"
            android:textColor="@color/dark"
			style="@style/Base.TextAppearance.AppCompat.Small"/>
		<!--<Button-->
			<!--android:id="@+id/widget_button"-->
			<!--android:layout_width="match_parent"-->
			<!--android:layout_height="wrap_content"-->
			<!--android:layout_gravity="bottom"-->
			<!--android:text="R"/>-->
	</LinearLayout>
</RelativeLayout>
