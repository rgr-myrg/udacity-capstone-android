<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:fab="http://schemas.android.com/apk/res-auto">

	<com.github.clans.fab.FloatingActionMenu
		android:id="@+id/fab_menu_starred_drawer"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		fab:menu_colorNormal="@color/colorPrimary"
		fab:menu_openDirection="up"
		fab:menu_labels_ellipsize="end"
		fab:menu_labels_singleLine="true">

		<com.github.clans.fab.FloatingActionButton
			android:id="@+id/fab_sort_by_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_sort_by_alpha_white_24dp"
			android:onClick="onSortByTitleClicked"
			fab:fab_size="mini"
			fab:fab_label="@string/fab_label_title"/>

		<com.github.clans.fab.FloatingActionButton
			android:id="@+id/fab_sort_by_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_date_range_white_24dp"
			android:onClick="onSortByDateClicked"
			fab:fab_size="mini"
			fab:fab_label="@string/fab_label_date"/>
	</com.github.clans.fab.FloatingActionMenu>
</LinearLayout>